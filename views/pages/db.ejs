<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/db.css">
    <script src="index.js" defer></script>
    <title>Rectangle Database</title>
  </head>

  <body id="container">
    
    <div id="header">
      <button onclick="window.location.href='/';">Home</button> 
      <button onclick="window.location.href='/database';">Database</button> 
      <button onclick="window.location.href='/add';">Add</button> 
    </div>

    <div id="content">
      <h2>Database</h2>
      <table>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Colour</th>
        </tr>
        <!-- forEach -->

        <% for (var i = 0; i < results.length; i++) { %>
          let index = i + 1;
          <tr>
            <td>index</td>
            <td><%= results[i].name %></td>
            <td><%= results[i].colour %></td>
          </tr>
        <% } %>

        <tr>
          <td></td>
          <td></td>
          <td></td>
        </tr>

      </table>

      <ul>
        <% results.forEach(function(r) { %>
          <li><%= r.name %></li>
        <% }); %>
      </ul>


    </div>

  </body>
</html>
