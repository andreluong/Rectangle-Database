<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/stylesheets/home.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/db.css">
    <script src="../../client.js" defer></script>
    <title>Rectangle Database</title>
  </head>
  <body id="container">
    <div id="header">
      <button onclick="window.location.href='/';">Home</button> 
      <button onclick="window.location.href='/database';">Database</button> 
      <button onclick="window.location.href='/add';">Add</button> 
    </div>
    <div id="content">
      <h2>Database</h2>
      <table>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Colour</th>
        </tr>
        <% for (var i = 0; i < results.length; i++) { %>
          <tr>
            <td>
              <a href ="/database/<%= results[i].id%>"><%= results[i].id%></a>
            </td>
            <td><%= results[i].name %></td>
            <td><%= results[i].colour %></td>
          </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
